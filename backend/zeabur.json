{
  "version": "1",
  "services": {
    "backend": {
      "name": "ai-project-backend",
      "type": "web",
      "build": {
        "command": "python src/main.py --debug",
        "outputDir": ".",
        "install": "pip install -r requirements.txt"
      },
      "ports": [
        {
          "port": 8001,
          "public": true
        }
      ],
      "env": {
        "API_HOST": "0.0.0.0",
        "API_PORT": 8001,
        "API_BASE_URL": "http://localhost:8001"
      }
    }
  }
}