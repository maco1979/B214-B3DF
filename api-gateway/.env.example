# API网关环境配置示例

# 服务器配置
PORT=8080
NODE_ENV=development

# 安全配置
JWT_SECRET=your-super-secret-jwt-key-here
API_KEYS=key1,key2,key3

# 前端配置
FRONTEND_URL=http://localhost:3000

# 日志配置
LOG_LEVEL=info

# 服务发现配置
SERVICE_DISCOVERY_TIMEOUT=30000
HEARTBEAT_INTERVAL=10000

# 负载均衡配置
LOAD_BALANCING_STRATEGY=round-robin

# 限流配置
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# 监控配置
METRICS_ENABLED=true
HEALTH_CHECK_INTERVAL=30000

# 数据库配置（如果需要）
DATABASE_URL=mongodb://localhost:27017/api-gateway
REDIS_URL=redis://localhost:6379

# 外部服务配置
DECISION_SERVICE_URL=http://localhost:8001
BLOCKCHAIN_SERVICE_URL=http://localhost:8002
FEDERATED_SERVICE_URL=http://localhost:8003
EDGE_SERVICE_URL=http://localhost:8004
PERFORMANCE_SERVICE_URL=http://localhost:8005
MODEL_SERVICE_URL=http://localhost:8006
DATA_SERVICE_URL=http://localhost:8007